<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:pagemodels="clr-namespace:Compendia.ViewModel"
             x:Class="Compendia.Views.SignUpView"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">


    <ContentPage.BindingContext>
        <pagemodels:SignUpViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style
            x:Key="ButtonStyle"
            TargetType="Button">
            <Setter Property="HorizontalOptions" Value="Center"></Setter>
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="CornerRadius" Value="0"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
        </Style>
        <Style
            x:Key="EntryStyle"
            TargetType="Entry">
            <Setter Property="HorizontalOptions" Value="Fill"></Setter>
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout Margin="20" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="COMPENDIA"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontAttributes="Bold"
                   Margin="10"/>

            <Label Text="Hallo!  Erstelle dir einen neuen Account."
                   FontSize="Small"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   Margin="10"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <Entry Text="{Binding EntryName}"
                    Style="{StaticResource EntryStyle}"
                    Placeholder="Vorname      "/>
                <Entry Text="{Binding EntrySurname}"
                    Style="{StaticResource EntryStyle}"
                    Placeholder="Nachname     "/>
            </StackLayout>
            <Entry Text="{Binding EntryUsername}"
                    Style="{StaticResource EntryStyle}"
                    Placeholder="Username      "/>
            <Entry Text="{Binding EntryPassword}"
                    Style="{StaticResource EntryStyle}"
                    Placeholder="Password     "/>
            <Entry Text="{Binding EntryConfirmPassword}"
                    Style="{StaticResource EntryStyle}"
                    Placeholder="Confirm Password"/>
            <Button 
                    BackgroundColor="Blue"
                    BorderColor="Blue"
                    TextColor="White"
                    BorderWidth="5"
                    Text ="Account erstellen"
                    Style="{StaticResource ButtonStyle}"
                    Command="{Binding SignUpCommand}"/>
            
            <Label Text="Du hast schon einen Account? Login."
                   HorizontalOptions="Center"
                   TextDecorations="Underline"
                   FontSize="10"
                   TextColor="Gray">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                                 Command="{Binding LabelCommand}"
                          />
                </Label.GestureRecognizers>
            </Label>
            
            

        </StackLayout>
        
